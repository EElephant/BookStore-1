<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

    <package name="default" namespace="/" extends="struts-default">

        <interceptors>
            <interceptor name="authorizationinterceptor" class="top.yimiaohome.common.AuthorizationInterceptor"/>
        </interceptors>

        <action name="login" class="top.yimiaohome.action.LoginAction" method="login">
            <result name="input">/login.jsp</result>
            <result name="success">/index.jsp</result>
            <result name="error">/login.jsp</result>
        </action>

        <action name="logout" class="top.yimiaohome.action.LoginAction" method="logout">
            <result name="success">/index.jsp</result>
            <result name="error">/index.jsp</result>
        </action>

        <action name="register" class="top.yimiaohome.action.RegisterAction">
            <result name="success">/login.jsp</result>
            <result name="error">/index.jsp</result>
        </action>

        <action name="repassword" class="top.yimiaohome.action.RePasswordAction">
            <result name="success">/login.jsp</result>
            <result name="error">/user/repassword.jsp</result>
        </action>

        <action name="userDetail" class="top.yimiaohome.action.UserDetailAction" method="init">
            <result name="success">/user/detail.jsp</result>
            <result name="error">/user/detail.jsp</result>
        </action>

        <action name="userDetailUpdate" class="top.yimiaohome.action.UserDetailUpdateAction" method="update">
            <result name="success">/user/detail.jsp</result>
            <result name="error">/user/detail.jsp</result>
        </action>
    </package>

</struts>